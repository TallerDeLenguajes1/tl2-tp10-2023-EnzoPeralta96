@model ViewModels.CreateTareaViewModels;

<form asp-controller="Tarea" asp-action="CreateTarea">
    <div class="form-group">
        <label asp-for="@Model.Id_tablero">Id Tablero:</label>

        <select asp-for="@Model.Id_tablero" class="form-control">
            @foreach (var tab in Model.Tableros)
            {
                <option value="@tab.Id">@tab.Id</option>
            }
        </select>

        <label asp-for="@Model.Nombre">Nombre:</label>
        <input asp-for="@Model.Nombre" class="form-control" />

        <label asp-for="@Model.EstadoTarea">Estado:</label>
        <select asp-for="@Model.EstadoTarea" asp-items="Html.GetEnumSelectList<Estado>()" class="form-control"></select>

        <label asp-for="@Model.Descripcion">Descripcion:</label>
        <input asp-for="@Model.Descripcion" class="form-control" />

        <label asp-for="@Model.Color">Color:</label>
        <input asp-for="@Model.Color" class="form-control" id="stringColor" name="Color" readonly hidden>
        <input type="color" class="form-control" id="Color" onchange="GuardarColor()">


    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<script>
    function GuardarColor() {
        var Color = document.getElementById('Color');
        var stringColor = document.getElementById('stringColor');
        stringColor.value = Color.value;
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}