@{
    ViewData["Title"] = "Tareas";
}

@model  ViewModels.TareasByUsuarioViewModels;

<h2>Mis tareas</h2>

@if (Model.TareasPropias.Count() == 0)
{
    <p>Aun no creaste un tarea. Para crear una haz click aqu√≠</p>
}
else
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th hidden>ID</th>
                <th hidden>ID Tablero</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>Color</th>
                <th hidden>Id Usuario Asignado</th>
                <th>Usuario asignado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model.TareasPropias)
            {
                <tr>
                    <td hidden>@tarea.Id</td>
                    <td hidden>@tarea.Id_tablero</td>
                    <td>@tarea.Nombre</td>
                    <td>@tarea.EstadoTarea</td>
                    <td>@tarea.Descripcion</td>
                    <td>
                        <input type="color" asp-for="@tarea.Color" name="colorInput" value="@tarea.Color" disabled>
                    </td>
                    <td hidden>
                        @tarea.Id_usuario_asignado
                    </td>
                    @if (string.IsNullOrEmpty(@tarea.Usuario_asignado))
                    {
                        <td>sin asignar</td>
                    }
                    else
                    {
                        <td>@tarea.Usuario_asignado</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (TempData.ContainsKey("MensajeAlerta"))
{
    <script>
        alert('@TempData["MensajeAlerta"]');
    </script>
}


