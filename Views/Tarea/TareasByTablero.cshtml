@{
    ViewData["Title"] = "Tareas";
}

@model List<Tarea>


<h2 text-aling:center>Listado de Tareas</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th hidden>ID Tablero</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th hidden>Id Usuario Asignado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model)
        {
            <tr>
                <td hidden>@tarea.Id</td>
                <td hidden>@tarea.Id_tablero</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.EstadoTarea</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td hidden>@tarea.Id_usuario_asignado</td>
                <td>
                    <a asp-controller="Tarea" asp-action="UpdateTarea" asp-route-idTarea="@tarea.Id">Editar</a>
                    <a asp-controller="Tarea" asp-action="AsignarUser" asp-route-idTarea="@tarea.Id">Asginar Usuario</a>
                    <a asp-controller="Tarea" asp-action="DeleteTarea" asp-route-idTableroDE="@tarea.Id_tablero" asp-route-idTareaDE="@tarea.Id" 
                        onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
