@model ViewModels.UpdateTareaViewModels;


<form asp-controller="TareasByTablero" asp-action="UpdateTarea">
    <div class="form-group">

        <input asp-for="@Model.Id">
        <span asp-validation-for="@Model.Id" class="text-danger"></span>

        <input asp-for="@Model.Id_tablero" class="form-control">
        <span asp-validation-for="@Model.Id_tablero" class="text-danger"></span>

        <input asp-for="@Model.Id_Propietario_Tablero" class="form-control">
        <span asp-validation-for="@Model.Id_Propietario_Tablero" class="text-danger"></span>


        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>

        <label asp-for="@Model.EstadoTarea"></label>
        <select asp-for="@Model.EstadoTarea" asp-items="Html.GetEnumSelectList<Estado>()" class="form-control"></select>
        <span asp-validation-for="@Model.EstadoTarea" class="text-danger"></span>

        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>

        <label asp-for="@Model.Color"></label>
        <input asp-for="@Model.Color" class="form-control" id="stringColor" name="Color" readonly hidden>
        <input type="color" class="form-control" id="Color" onchange="GuardarColor()">
        <span asp-validation-for="@Model.Color" class="text-danger"></span>

        <input asp-for="@Model.Id_usuario_asignado">
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

<script>
    function GuardarColor() {
        var Color = document.getElementById('Color');
        var stringColor = document.getElementById('stringColor');
        stringColor.value = Color.value;
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}