@model ViewModels.CreateTableroViewModels;

<div class="border border-primary border-3 p-3 rounded contenedor-form">
    
    <h2>Crear tablero</h2>

    <p>Ingrese los siguientes datos:</p>

    <form asp-controller="Tablero" asp-action="Create">

        <div class="mb-3">
            <input asp-for="@Model.Id_usuario_propietario" class="form-control">
            <span asp-validation-for="@Model.Id_usuario_propietario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Usuario_propietario"></label>
            <input asp-for="@Model.Usuario_propietario" class="form-control" readonly />
            <span asp-validation-for="@Model.Usuario_propietario" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label asp-for="@Model.Nombre"></label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Descripcion"></label>
            <input asp-for="@Model.Descripcion" class="form-control" />
            <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
        </div>

        <div class="contenedor-boton">
            <button type="submit" class="btn btn-dark">Enviar</button>
            <a asp-controller="Tablero" asp-action="Index" class="btn btn-outline-dark">
                Cancelar
            </a>
        </div>
    </form>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
