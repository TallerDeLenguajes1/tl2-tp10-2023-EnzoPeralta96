@{
    ViewData["Title"] = "Tableros";
}

@model List<Tablero>



<h2 text-aling:center>Listado de Tableros</h2>

<nav>
    <ul>
        <li>
            <a asp-controller="Tablero" asp-action="CreateTablero">Crear Tablero</a>
        </li>
        
        <li>
            <a asp-controller="Tarea" asp-action="CreateTarea">Crear Tarea</a>
        </li>
    </ul>
</nav>

<table class="table table-dark">
    <thead>
        <tr>
            <th hidden>ID</th>
            <th>ID Usuario Propietario</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Editar</th>
            <th>Eliminar</th>
            <th>Ver</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model)
        {
            <tr>
                <td hidden>@tablero.Id</td>
                <td>@tablero.Id_usuario_propietario</td>
                <td>@tablero.Nombre</td>
                <td>@tablero.Descripcion</td>
                <td>
                    <a asp-controller="Tablero" asp-action="UpdateTablero" asp-route-idTablero="@tablero.Id">Editar</a>
                </td>
                <td>
                    <a asp-controller="Tablero" asp-action="DeleteTablero" asp-route-idTablero="@tablero.Id"
                        onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>
                </td>
                <td>
                    <a asp-controller="Tarea" asp-action="TareasByTablero" asp-route-idTablero="@tablero.Id">Tareas</a>
                </td>
            </tr>
        }
    </tbody>
</table>
