@{
    string IsLogged = Context.Request.HttpContext.Session.GetString("Autenticado");
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tl2_tp10_2023_EnzoPeralta96</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_tp10_2023_EnzoPeralta96.styles.css" asp-append-version="true" />
</head>

<body style="height: 100vh;  margin: 0;">
    <header style="height: 15vh;">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-flex align-items-center" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-3 d-lg-block">

                        <li class="nav-item">
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

        @if (!string.IsNullOrEmpty(IsLogged))
        {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLinkUsuario"
                                        role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Usuario
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLinkUsuario">
                                        <a class="dropdown-item" asp-area="" asp-controller="Usuario" asp-action="Index">Ver
                                            usuario</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Usuario"
                                            asp-action="CreateUser">Crear
                                            Usuario</a>
                                    </div>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link  dropdown-toggle" href="#" id="navbarDropdownMenuLinkTableros"
                                        role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Tableros
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLinkTableros">
                                        <a class="dropdown-item" asp-area="" asp-controller="Tablero" asp-action="Index">Ver
                                            tableros</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Tablero"
                                            asp-action="CreateTablero">Crear tablero</a>
                                    </div>
                                </li>
        }
                    </ul>

                    <ul class="navbar-nav ms-auto me-3">
                        <li class="nav-item my-2 my-lg-0">
        @if (string.IsNullOrEmpty(IsLogged))
        {
                                    <a class="btn btn-sm btn-outline-secondary btn-dark" role="button" asp-area=""
                                        asp-controller="Login" asp-action="Index">Iniciar Sesión</a>

        }
        else
        {
                                    <a class="btn btn-sm btn-outline-secondary" role="button" asp-area="" asp-controller="Login"
                                        asp-action="LogOut">Cerrar sesión</a>
        }
                        </li>
                    </ul>

                </div>
            </div> 

        </nav>
    </header>

    <div class="container" style="height: 80vh;">
        <main role="main" class="pb-3 d-flex justify-content-center" style="height: 100%; margin:0;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted " style="height: 5vh;">
        <div class="container d-flex align-items-center" style="height: 100%;">
            &copy; 2023 - tl2_tp10_2023_EnzoPeralta96 - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown(); // Inicializa el dropdown
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
